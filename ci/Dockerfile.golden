FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /repo

# System deps commonly needed for audio + TTS tooling
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    espeak-ng \
    libsndfile1 \
    build-essential \
    git \
    curl \
  && rm -rf /var/lib/apt/lists/*

# Pre-copy only requirements first to maximize docker layer cache
COPY pronouncex-tts/requirements.txt /repo/pronouncex-tts/requirements.txt

RUN python -m pip install --upgrade pip setuptools wheel \
  && pip install -r /repo/pronouncex-tts/requirements.txt

# Force CPU-only PyTorch wheels if torch is installed in the container.
RUN python -m pip uninstall -y torch torchvision torchaudio || true \
  && python -m pip freeze | grep -i '^nvidia-' | cut -d= -f1 | xargs -r python -m pip uninstall -y \
  && python -m pip install --index-url https://download.pytorch.org/whl/cpu \
    "torch==2.4.1+cpu" "torchvision==0.19.1+cpu" "torchaudio==2.4.1+cpu"

# Copy repo last (so edits donâ€™t bust dependency cache)
COPY . /repo
